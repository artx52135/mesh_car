<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" >

    <xacro:include filename="inertial_macros.xacro"/>

    <material name="white">
        <color rgba="1 1 1 1" />
    </material>

    <material name="red">
        <color rgba="1 0 0 1" />
    </material>

    <material name="orange">
        <color rgba="1 0.3 0.1 1"/>
    </material>

    <material name="blue">
        <color rgba="0.2 0.2 1 1"/>
    </material>

    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>

    <!-- BASE LINK -->

    <link name="base_link">

    </link>


    <!-- CHASSIS LINK -->

    <joint name="chassis_joint" type="fixed">
        <parent link="base_link"/>
        <child link="chassis"/>
        <origin xyz="0 0 0"/>
    </joint>

    <link name="chassis">
        <visual>
            <origin xyz="0.1 0 -0.025" rpy="0 0 ${pi/2}"/>
            <geometry>
               <mesh filename="file:///home/artem/mesh_car/src/mesh_car/meshes/car.stl" scale="0.005 0.005 0.005"/> 
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
            <origin xyz="0.1 0 0"/>
            <geometry>
                <mesh filename="file:///home/artem/mesh_car/src/mesh_car/meshes/car.stl" scale="0.005 0.005 0.005"/> 
            </geometry>
        </collision>
        <xacro:inertial_box mass="0.5" x="0.3" y="0.3" z="0.15">
            <origin xyz="0.15 0 0.075" rpy="0 0 0"/>
        </xacro:inertial_box>
    </link>

    <gazebo reference="chassis"> 
        <material>
            Gazebo/White
        </material>
    </gazebo>
    
    <!-- LEFT WHEEL LINK -->

    <joint name="left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="left_wheel"/>
        <origin xyz="-0.115 0.15 0" rpy="0 0 0" />
        <axis xyz="0 1 0"/>
    </joint>

    <link name="left_wheel">
        <visual>
            <geometry>
                <mesh filename="file:///home/artem/mesh_car/src/mesh_car/meshes/left_tire.stl" scale="0.002 0.002 0.002"/>  
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <mesh filename="file:///home/artem/mesh_car/src/mesh_car/meshes/left_tire.stl" scale="0.002 0.002 0.002"/> 
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.04" radius="0.05">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="left_wheel"> 
        <material>
            Gazebo/Blue
        </material>
    </gazebo>

    <!-- LEFT2 WHEEL LINK -->

    <joint name="left2_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="left2_wheel"/>
        <origin xyz="0.285 0.15 0" rpy="0 0 0" />
        <axis xyz="0 1 0"/>
    </joint>

    <link name="left2_wheel">
        <visual>
            <geometry>
                 <mesh filename="file:///home/artem/mesh_car/src/mesh_car/meshes/left_tire.stl" scale="0.002 0.002 0.002"/>  
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                 <mesh filename="file:///home/artem/mesh_car/src/mesh_car/meshes/left_tire.stl" scale="0.002 0.002 0.002"/>  
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.04" radius="0.05">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="left2_wheel"> 
        <material>
            Gazebo/Blue
        </material>
    </gazebo>


    <!-- RIGHT WHEEL LINK -->

    <joint name="right_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="right_wheel"/>
        <origin xyz="-0.115 -0.15 0" rpy="0 0 0" />
        <axis xyz="0 -1 0"/>
    </joint>

    <link name="right_wheel">
        <visual>
            <geometry>
                <mesh filename="file:///home/artem/mesh_car/src/mesh_car/meshes/right_tire.stl" scale="0.002 0.002 0.002"/> 
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <mesh filename="file:///home/artem/mesh_car/src/mesh_car/meshes/right_tire.stl" scale="0.002 0.002 0.002"/> 
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.04" radius="0.05">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>
     <gazebo reference="right_wheel"> 
        <material>
            Gazebo/Blue
        </material>
    </gazebo>

    <!-- RIGHT2 WHEEL LINK -->

    <joint name="right2_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="right2_wheel"/>
        <origin xyz="0.285 -0.15 0" rpy="0 0 0" />
        <axis xyz="0 -1 0"/>
    </joint>

    <link name="right2_wheel">
        <visual>
            <geometry>
                <mesh filename="file:///home/artem/mesh_car/src/mesh_car/meshes/right_tire.stl" scale="0.002 0.002 0.002"/> 
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <mesh filename="file:///home/artem/mesh_car/src/mesh_car/meshes/right_tire.stl" scale="0.002 0.002 0.002"/> 
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.04" radius="0.05">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>
     <gazebo reference="right2_wheel"> 
        <material>
            Gazebo/Blue
        </material>
    </gazebo>
</robot>